{
  "name": "João's Coding Test",
  "version": "1.0",
  "description": "Take page screenshots and search title on iTunes",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "João's Coding Test",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
